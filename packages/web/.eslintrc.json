{
  "extends": ["@yestheory.family/eslint-config", "plugin:react/recommended", "plugin:react/jsx-runtime", "plugin:@next/next/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": ["cypress/**/*.ts"],
      "parserOptions": {
        "project": "./cypress/tsconfig.json"
      }
    }
  ]
}
